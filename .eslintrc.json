{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "script"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "crockford", "prettier"],
    "rules": {
        "no-plusplus": 0,
        "no-underscore-dangle": 0,
        "no-use-before-define": 0,
        "no-var": 2,
        "one-var": 0,
        "strict": 2,
        "wrap-iife": [2, "inside"]
    }
}
